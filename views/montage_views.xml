<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_montage_piece_tree" model="ir.ui.view">
        <field name="name">montage.piece.tree</field>
        <field name="model">montage.piece</field>
        <field name="arch" type="xml">
            <tree editable="bottom"><field name="nom"/><field name="code"/><field name="capacite_max"/></tree>
        </field>
    </record>
    <record id="action_montage_piece" model="ir.actions.act_window">
        <field name="name">Montages</field>
        <field name="res_model">montage.piece</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_montage_piece" name="Montages" parent="menu_planificateur_config"
              action="action_montage_piece" sequence="60"/>
</odoo>
