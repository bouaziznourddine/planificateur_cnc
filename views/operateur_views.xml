<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_operateur_production_tree" model="ir.ui.view">
        <field name="name">operateur.production.tree</field>
        <field name="model">operateur.production</field>
        <field name="arch" type="xml">
            <tree editable="bottom"><field name="name"/><field name="matricule"/><field name="available"/></tree>
        </field>
    </record>
    <record id="action_operateur_production" model="ir.actions.act_window">
        <field name="name">Opérateurs</field>
        <field name="res_model">operateur.production</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_operateur_production" name="Opérateurs" parent="menu_planificateur_config"
              action="action_operateur_production" sequence="70"/>
</odoo>
