        <field name="name">Outils</field>
        <field name="res_model">outil.fabrication</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_outil_fabrication" name="Outils" parent="menu_planificateur_config"
              action="action_outil_fabrication" sequence="40"/>
</odoo>
