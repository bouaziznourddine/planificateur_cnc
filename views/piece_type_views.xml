<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_piece_type_tree" model="ir.ui.view">
        <field name="name">piece.type.tree</field>
        <field name="model">piece.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom"><field name="nom"/><field name="code"/><field name="palette_type"/><field name="temps_cycle"/></tree>
        </field>
    </record>
    <record id="action_piece_type" model="ir.actions.act_window">
        <field name="name">Types de Pièces</field>
        <field name="res_model">piece.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_piece_type" name="Types de Pièces" parent="menu_planificateur_config"
              action="action_piece_type" sequence="20"/>
</odoo>
