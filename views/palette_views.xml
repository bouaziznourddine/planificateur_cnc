<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_palette_fabrication_tree" model="ir.ui.view">
        <field name="name">palette.fabrication.tree</field>
        <field name="model">palette.fabrication</field>
        <field name="arch" type="xml">
            <tree editable="bottom"><field name="nom"/><field name="code"/><field name="type_palette"/></tree>
        </field>
    </record>
    <record id="action_palette_fabrication" model="ir.actions.act_window">
        <field name="name">Palettes</field>
        <field name="res_model">palette.fabrication</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_palette_fabrication" name="Palettes" parent="menu_planificateur_config"
              action="action_palette_fabrication" sequence="50"/>
</odoo>
